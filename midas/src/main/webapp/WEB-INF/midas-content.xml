<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	 
	<context:annotation-config />
	<context:component-scan base-package="com.victor.midas.services" />
	<context:component-scan base-package="com.victor.midas.worker" />
	<context:component-scan base-package="com.victor.midas.dao" />
    
    <!-- static properties , read from property files-->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:/com/victor/midas/script/local.properties</value>              
			</list>
		</property>
	</bean> 

	<!-- Loads MongoDB configuraton -->  
	<import resource="mongo-config.xml"/>
	<bean id="stockDao" class="com.victor.midas.dao.StockDao" />
	<bean id="taskDao" class="com.victor.midas.dao.TaskDao" />
	
	<!-- thread pool for tasks -->  
	<bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="5" />
		<property name="maxPoolSize" value="10" />
		<property name="queueCapacity" value="25" />
	</bean>

	<bean id="taskMgr" class="com.victor.midas.worker.TaskMgr">
		<constructor-arg ref="taskExecutor" />
	</bean>

	<!-- task -->  
	<bean id="mktloader" class="com.victor.midas.worker.MktDataLoader" />
	
	<!-- service provider -->  
	<bean id="typeAhead" class="com.victor.midas.services.TypeAhead">
		<constructor-arg ref="stockDao" />
	</bean>
	
